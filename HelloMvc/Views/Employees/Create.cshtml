@model Employee
@{
    var errorList = new List<string>();
    if (ViewBag.ErrorList != null) {
        errorList = (List<string>)ViewBag.ErrorList;
    }
}

@if (errorList.Any()) {
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in errorList) {
                <li>@error</li>
            }
        </ul>

    </div>
}

<form method="post">
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input class="form-control" type="text" asp-for="FirstName" />
        @if (Model!=null && string.IsNullOrEmpty(Model.FirstName)) {
            <div class="text-danger">
                Please provide a First Name.
            </div>
        }

    </div>



    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input class="form-control" type="text" asp-for="LastName" />
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" type="submit">
            Create New Employee
        </button>
    </div>
</form>

