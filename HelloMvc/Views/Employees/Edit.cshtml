@model Employee

<form method="post" >
    <input type="hidden" value="@Model.EmployeeId" name="EmployeeId" />

    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input class="form-control" type="text" value="@Model.FirstName" name="firstName"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input class="form-control" type="text" asp-for="LastName"/>
    </div>
    
   

    <div class="mb-3">
        <button class="btn btn-primary" type="submit">
            Save Employee
        </button>
    </div>
</form>

